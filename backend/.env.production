# Production Environment Configuration Template
# Copy this to .env and fill in actual values

# Database Configuration
DB_HOST=localhost
DB_USER=bloodapp
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE
DB_NAME=blood_donation_db
DB_PORT=3306

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Secret - MUST be a strong random string (32+ characters)
JWT_SECRET=YOUR_VERY_SECURE_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS

# Email Configuration (Gmail example)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_specific_password

# Frontend URL (for CORS)
FRONTEND_URL=https://parneet.me

# Backend URL
BACKEND_URL=https://api.parneet.me

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
